@model IEnumerable<KinoMania2.Models.FilmType>

@{
    ViewData["Title"] = "Index";
}

<h1>Gatunki filmowe</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Dodaj nowy</a>
    </p>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@item.Type</h5>
                    <p class="card-text">Zobacz filmy o tym gatunku</p>
                    <a href="/Films?filmTypeId=@item.Id" class="btn btn-primary btn-sm">Zobacz</a>
                    <div class="mt-2">
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Usuń</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Szczegóły</a>
                            </div>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    }
</div>


